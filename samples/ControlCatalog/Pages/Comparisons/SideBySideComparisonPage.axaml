<UserControl x:Class="ControlCatalog.Pages.SideBySideComparisonPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
  <Grid RowDefinitions="Auto,*"
        ColumnDefinitions="*,Auto,*"
        ColumnSpacing="12"
        RowSpacing="12">

    <Border Grid.Column="0"
            BorderThickness="0,0,0,1"
            BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
            Padding="0,0,0,4">
      <TextBlock Text="{Binding LeftHeader, ElementName=Root}"
                 FontSize="16"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center" />
    </Border>

    <Border Grid.Column="2"
            BorderThickness="0,0,0,1"
            BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
            Padding="0,0,0,4">
      <TextBlock Text="{Binding RightHeader, ElementName=Root}"
                 FontSize="16"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center" />
    </Border>

    <Border Grid.Row="1"
            BorderBrush="{DynamicResource CatalogBaseMediumColor}"
            BorderThickness="1"
            CornerRadius="4">
      <ScrollViewer Margin="4"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
        <ContentPresenter Content="{Binding LeftContent, ElementName=Root}" />
      </ScrollViewer>
    </Border>

    <GridSplitter Grid.Row="1"
                  Grid.Column="1"
                  Width="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Background="{DynamicResource CatalogBaseLowColor}" />

    <Border Grid.Row="1"
            Grid.Column="2"
            BorderBrush="{DynamicResource CatalogBaseMediumColor}"
            BorderThickness="1"
            CornerRadius="4">
      <ScrollViewer Margin="4"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
        <ContentPresenter Content="{Binding RightContent, ElementName=Root}" />
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
