<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FastTreeDataGrid.DataSourcesDemo.ViewModels"
        xmlns:views="clr-namespace:FastTreeDataGrid.DataSourcesDemo.Views"
        mc:Ignorable="d"
        x:DataType="vm:MainWindowViewModel"
        d:DesignWidth="1024"
        d:DesignHeight="768"
        x:Class="FastTreeDataGrid.DataSourcesDemo.MainWindow"
        Title="FastTreeDataGrid Data Sources">
  <Grid RowDefinitions="Auto,*" Margin="12">
    <StackPanel Orientation="Horizontal" Spacing="12">
      <TextBlock Text="FastTreeDataGrid Data Pipelines" FontSize="18" FontWeight="SemiBold" />
      <TextBlock Text="(compare async, streaming, and hybrid feeds)" VerticalAlignment="Center" Foreground="#666" />
      </StackPanel>

    <TabControl Grid.Row="1" Margin="0,12,0,0" TabStripPlacement="Left">
      <TabItem Header="Data Sources">
        <views:DataSourcesTab />
      </TabItem>
      <TabItem Header="Row Reorder">
        <views:RowReorderTab DataContext="{Binding RowReorder}" />
      </TabItem>
    </TabControl>
  </Grid>
</Window>
