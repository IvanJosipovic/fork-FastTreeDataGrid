<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:FastTreeDataGrid.Demo.ViewModels"
             xmlns:widgets="clr-namespace:FastTreeDataGrid.Demo.ViewModels.Widgets"
             mc:Ignorable="d"
             x:Class="FastTreeDataGrid.Demo.Views.WidgetsGalleryTab"
             x:DataType="vm:MainWindowViewModel">
  <Grid RowDefinitions="Auto,*"
        Margin="16">
    <StackPanel Orientation="Vertical"
                Spacing="6">
      <TextBlock Text="Widgets Gallery Explorer"
                 FontSize="18"
                 FontWeight="SemiBold" />
      <TextBlock Text="Browse each gallery category to see themed widgets, highlights, and performance scenarios delivered across the FastTreeDataGrid surface."
                 Foreground="#666"
                 TextWrapping="Wrap" />
    </StackPanel>

    <TabControl Grid.Row="1"
                Margin="0,16,0,0"
                ItemsSource="{Binding WidgetsGalleryScenarios}">
      <TabControl.ItemTemplate>
        <DataTemplate x:DataType="vm:WidgetsGalleryScenario">
          <TextBlock Text="{Binding Title}"
                     TextWrapping="Wrap"
                     MaxWidth="220" />
        </DataTemplate>
      </TabControl.ItemTemplate>
      <TabControl.ContentTemplate>
        <DataTemplate x:DataType="vm:WidgetsGalleryScenario">
          <ScrollViewer HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16"
                        Margin="0,0,8,0">
              <TextBlock Text="{Binding Summary}"
                         FontSize="14"
                         Foreground="#333"
                         TextWrapping="Wrap" />

              <ItemsControl ItemsSource="{Binding Highlights}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"
                                Spacing="6" />
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                      <TextBlock Text="â€¢"
                                 FontSize="14"
                                 Foreground="#4A5568" />
                      <TextBlock Text="{Binding .}"
                                 Foreground="#4A5568"
                                 TextWrapping="Wrap"
                                 MaxWidth="520" />
                    </StackPanel>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

              <ItemsControl ItemsSource="{Binding Boards}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"
                                Spacing="16" />
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="widgets:WidgetBoard">
                    <Border BorderBrush="#D0D7E6"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12">
                      <StackPanel Spacing="8">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="15"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Description}"
                                   Foreground="#666"
                                   TextWrapping="Wrap" />
                        <widgets:WidgetBoardPresenter Board="{Binding}"
                                                      HorizontalAlignment="Center" />
                      </StackPanel>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </StackPanel>
          </ScrollViewer>
        </DataTemplate>
      </TabControl.ContentTemplate>
    </TabControl>
  </Grid>
</UserControl>
