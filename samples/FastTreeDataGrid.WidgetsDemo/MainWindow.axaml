<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FastTreeDataGrid.WidgetsDemo.ViewModels"
        xmlns:views="clr-namespace:FastTreeDataGrid.WidgetsDemo.Views"
        mc:Ignorable="d"
        x:DataType="vm:MainWindowViewModel"
        d:DesignWidth="1024"
        d:DesignHeight="768"
        x:Class="FastTreeDataGrid.WidgetsDemo.MainWindow"
        Title="FastTreeDataGrid Widgets">
  <Grid RowDefinitions="Auto,*" Margin="12">
    <StackPanel Orientation="Horizontal" Spacing="12">
      <TextBlock Text="FastTreeDataGrid Widgets Showcase" FontSize="18" FontWeight="SemiBold" />
      <TextBlock Text="(explore interactive widget samples)" VerticalAlignment="Center" Foreground="#666" />
      </StackPanel>

    <TabControl Grid.Row="1" Margin="0,12,0,0" TabStripPlacement="Left">
      <TabItem Header="Widgets Explorer">
        <views:WidgetsTab />
      </TabItem>
      <TabItem Header="Virtualizing Layouts">
        <views:VirtualizingLayoutsTab />
      </TabItem>
      <TabItem Header="Widgets Gallery">
        <views:WidgetsGalleryTab />
      </TabItem>
      <TabItem Header="Boards Gallery">
        <views:GalleryTab />
      </TabItem>
    </TabControl>
  </Grid>
</Window>
